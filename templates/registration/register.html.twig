{% extends 'base.html.twig' %}
{% block title %}Register{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="container-fluid ">

            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="{{ asset('images/Data-Security.png') }}"
                         class="img-fluid" alt="">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <img src="{{ asset('images/login-icon-removebg-preview.png') }}"
                         class="img-fluid" alt="">
                    <div class="form-outline mb-4">
                        {{ form_start(registrationForm) }}

                        {% include 'errors.label.html.twig' with  {'errors': form_errors(registrationForm.email)}%}
                        <div class="parent-field mb-4">
                            {% include 'errors.input.html.twig' with {'errors': form_errors(registrationForm.email), 'input': registrationForm.email, 'isSubmitted': isSubmitted} %}
                        </div>

                        {% include 'errors.label.html.twig' with  {'errors': form_errors(registrationForm.userName)}%}
                        <div class="parent-field mb-4">
                            {% include 'errors.input.html.twig' with {'errors': form_errors(registrationForm.userName), 'input': registrationForm.userName, 'isSubmitted': isSubmitted} %}
                        </div>

                        {% include 'errors.label.html.twig' with  {'errors': form_errors(registrationForm.password)}%}
                        <div class="parent-field mb-4">
                            {% include 'errors.input.html.twig' with {'errors': form_errors(registrationForm.password), 'input': registrationForm.password, 'isSubmitted': isSubmitted} %}
                        </div>

                        {% include 'errors.label.html.twig' with  {'errors': form_errors(registrationForm.confirmedPassword)}%}
                        <div class="parent-field mb-4">
                            {% include 'errors.input.html.twig' with {'errors': form_errors(registrationForm.confirmedPassword), 'input': registrationForm.confirmedPassword, 'isSubmitted': isSubmitted} %}

                        </div>

                        <button class="btn btn-primary btn-block">Register</button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}