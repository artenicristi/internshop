{{ form_start(form) }}
{{ form_row(form._token) }}

<div class="container-fluid my-4">

    <div class="text-center">
        {% if user.id is not null %}
            <h2>User #{{ user.id }}</h2>
        {% else %}
            <h2>Create new User</h2>
        {% endif %}
        <p class="lead">You can {{ action }} the information about this User</p>
    </div>

    <div class="row justify-content-center my-5">
        <div class="col-6">
            <form>

                <label class="form-label">Email:</label>
                {% include 'errors.label.html.twig' with {'errors': form_errors(form.email)} %}
                <div class="parent-field mb-4">
                  <span class="input-group-text">
                    <i class="fa fa-envelope"></i>
                  </span>
                    {% include 'errors.input.html.twig' with {'errors': form_errors(form.email), 'input': form.email, 'isSubmitted': isSubmitted} %}
                </div>
                <label class="form-label">User Name:</label>
                {% include 'errors.label.html.twig' with {'errors': form_errors(form.userName)} %}
                <div class="parent-field mb-4">
                  <span class="input-group-text">
                    <i class="fa fa-signature"></i>
                  </span>
                    {% include 'errors.input.html.twig' with {'errors': form_errors(form.userName), 'input': form.userName, 'isSubmitted': isSubmitted} %}
                </div>
                <label class="form-label">Password:</label>
                {% include 'errors.label.html.twig' with {'errors': form_errors(form.password)} %}
                <div class="parent-field mb-4">
                  <span class="input-group-text">
                    <i class="fa fa-key"></i>
                  </span>
                    {% include 'errors.input.html.twig' with {'errors': form_errors(form.password), 'input': form.password, 'isSubmitted': isSubmitted} %}
                </div>

                <label class="form-label">Choose the role:</label>
                {% include 'errors.label.html.twig' with {'errors': form_errors(form.roles)} %}
                <div class="mb-5 parent-field">
                  <span class="input-group-text">
                      <i class="fa fa-tags"></i>
                  </span>
                    {{ form_widget(form.roles) }}
                </div>

                <div class="mb-4 text-center">
                    <button class="btn btn-secondary ">{{ button_label|default('Save') }}</button>
                </div>

            </form>
        </div>
    </div>
</div>

{{ form_end(form) }}