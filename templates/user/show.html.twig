{% extends '/admin/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <body class="back-grey"></body>
    <div class="row justify-content-between m-4 align-items-center">
        <h1 class="nav-title">User #{{ user.id }}</h1>
        <div class="row justify-content-end gap-3">
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary ml-2 mr-2">Back to list</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary ml-2 mr-2">Edit</a>
            {{ include('user/_delete_button_form.html.twig') }}
        </div>
    </div>

    <table class="table text-white">
        <tbody>
        <tr>
            <th class="font-weight-normal label-color">Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th class="font-weight-normal label-color">Roles</th>
            <td>{% for role in user.roles %}
                    {{ role }}
                {% endfor %}</td>
        </tr>
        <tr>
            <th class="font-weight-normal label-color">User Name</th>
            <td>{{ user.userName }}</td>
        </tr>
        <tr>
            <th class="font-weight-normal label-color">CreatedAt</th>
            <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th class="font-weight-normal label-color">UpdatedAt</th>
            <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
